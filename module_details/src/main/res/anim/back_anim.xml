<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"> <!-- 动画时长300ms -->

    <!-- 平移动画：从当前位置向下滑出屏幕 -->
    <translate
        android:fromYDelta="0%"
        android:toYDelta="100%p" /> <!-- 100%p表示父容器高度的100% -->

    <!-- 透明度动画：逐渐消失 -->
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0" />
</set>