<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEA3">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/logo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.271" />

  <android.widget.Button
      android:id="@+id/phone_login"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/login_button"
      android:text="手机号登录"
      android:textColor="#EBC138"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.667" />


  <android.widget.Button
      android:id="@+id/register"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:background="@drawable/register_button"
      android:text="立即体验"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/phone_login"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/phone_login"
      app:layout_constraintTop_toBottomOf="@+id/phone_login"
      app:layout_constraintVertical_bias="0.159" />


  <android.widget.Button
      android:id="@+id/mailbox_login"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/mailbox"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.875" />

  <android.widget.Button
      android:id="@+id/qr_code_login"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/qr_code"
      app:layout_constraintBottom_toBottomOf="@+id/mailbox_login"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.673"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/mailbox_login"
      app:layout_constraintVertical_bias="0.0" />

  <android.widget.Button
      android:id="@+id/visitor_login"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/visitor"
      app:layout_constraintBottom_toBottomOf="@+id/qr_code_login"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.849"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/qr_code_login"
      app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>