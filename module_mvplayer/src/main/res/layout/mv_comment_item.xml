<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mv_comment_Avatar"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:radius="20dp" />

        <TextView
            android:id="@+id/mv_comment_Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#B297E2"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/mv_comment_Content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mv_comment_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:text="云南"
        android:textSize="12sp"
        android:textColor="#9487A0" />

        <TextView
            android:id="@+id/mv_comment_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:text="2025.7.18"
            android:textSize="12sp"
            android:textColor="#9487A0" />

</LinearLayout>