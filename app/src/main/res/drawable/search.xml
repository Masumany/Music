<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 明确形状为矩形（默认也是矩形，但显式声明更清晰） -->

    <!-- 圆角半径（35dp 适合按钮、卡片等较大控件） -->
    <corners android:radius="20dp" />

    <solid android:color="@color/white" />

    <!-- 描边（0.5dp 线宽较细，几乎不可见，建议调整） -->
    <stroke
        android:width="1dp"
    android:color="#CCC8C8"
    android:dashWidth="0dp"
    android:dashGap="0dp" />

    <!-- 可选：添加内边距（若作为背景，避免内容紧贴边框） -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

</shape>